<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDAD6"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="110dp"
            android:layout_height="112dp"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="تسجيل الدخول"
            android:textAlignment="center"
            android:textColor="#FF6F00"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/login_idNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="رقم الهوية"
            android:inputType="textPersonName"
            android:textColorHint="#050303"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="50dp"
            android:ems="10"
            android:hint="كلمة السر"
            android:inputType="textPassword"
            android:singleLine="false"
            android:textAlignment="textEnd"
            android:textColor="#090404"
            android:textColorHint="#120B0B"
            android:textSize="20sp" />

        <Button
            android:id="@+id/login_loginAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FF6F00"
            android:text="تسجيل الدخول"
            android:textColor="#040303"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="تسجيل الدخول" />

        <Button
            android:id="@+id/login_loginClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FF6F00"
            android:text="الدخول كزائر"
            android:textColor="#0B0808"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
