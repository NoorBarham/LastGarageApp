<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/notificationsListItem_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/rectangular_border"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="4dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/notificationItem_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Am" />

                    <TextView
                        android:id="@+id/notificationItem_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اسم"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/notificationsItem_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تم النشر بواسطة "
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/notificationsItem_image"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/rectangular_border"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>